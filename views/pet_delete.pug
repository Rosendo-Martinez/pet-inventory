extends layout 

block content 

    h1(class="mt-4") Delete Pet: #{pet.name}
    p ID: #{pet._id}

    hr

    p(class="display-6 mt-5") Are you sure you want to delete this pet?
    
    form(method="POST")
        input(type="hidden" name="petId" value=pet._id)

        button(type="submit" class="btn btn-danger") Delete

